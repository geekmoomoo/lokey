// Generate UUID v4
const generateUUID = (): string => {
  return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function(c) {
    const r = Math.random() * 16 | 0;
    const v = c === 'x' ? r : (r & 0x3 | 0x8);
    return v.toString(16);
  });
};

// ì‚¬ì—…ìë“±ë¡ë²ˆí˜¸ í¬ë§·íŒ… í•¨ìˆ˜ (000-00-00000)
const formatBusinessNumber = (value: string): string => {
  // ìˆ«ìë§Œ ë‚¨ê¸°ê¸°
  const numbersOnly = value.replace(/\D/g, '');

  // 10ìë¦¬ê°€ ì•„ë‹ˆë©´ ê·¸ëŒ€ë¡œ ë°˜í™˜
  if (numbersOnly.length !== 10) {
    return numbersOnly;
  }

  // 000-00-00000 í˜•ì‹ìœ¼ë¡œ í¬ë§·
  return `${numbersOnly.slice(0, 3)}-${numbersOnly.slice(3, 5)}-${numbersOnly.slice(5)}`;
};

